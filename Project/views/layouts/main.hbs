            </li>
            <li class="nav-item">
                <a class="nav-link" href="/incidentEditor">Incident Editor</a>
            </li>
        </ul>
    {{else}}
    <ul class="navbar-nav active">
        <li class="nav-item">
            <a class="nav-link" href="/incidents">Incidents</a>
        </li>
    </ul>
    {{/if}}

    <!--Only show the welcome message and the menu if the user already login -->
